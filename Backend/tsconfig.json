{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "types": ["jest"]
    },
    "include": ["src/**/*.ts", "src/tests/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  