  "type": "commonjs",
  "main": "dist/server_https.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "start-api": "cross-env ERR_LOG=err_api.log COMBINED_LOG=combined_api.log node dist/server_https.js",
    "start-listener": "cross-env ERR_LOG=err_listener.log COMBINED_LOG=combined_listener.log node dist/blockchainListener/blockchainListener.js",
    "start": "concurrently \"npm run start-api\" \"npm run start-listener\"",
    "dev-api": "cross-env ERR_LOG=err_api.log COMBINED_LOG=combined_api.log NODE_OPTIONS=\"--use-system-ca\" ts-node-dev --respawn --transpile-only src/server_https.ts",
    "dev-listener": "cross-env ERR_LOG=err_listener.log COMBINED_LOG=combined_listener.log NODE_OPTIONS=\"--use-system-ca\" ts-node-dev --respawn --transpile-only src/blockchainListener/blockchainListener.ts",
    "dev": "concurrently --names \"API,LISTENER\" -c \"blue,green\" \"npm run dev-api\" \"npm run dev-listener\"",
    "deploy-schemas": "ts-node-dev --respawn --transpile-only src/EAS/registerSchemas.ts"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-sdk": "^2.7.0",
    "@google-cloud/storage": "^7.16.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@types/multer": "^1.4.12",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "blurhash": "^2.0.5",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "express": "^5.1.0",
    "express-sslify": "^1.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "meta-png": "^1.0.6",
    "mongoose": "^8.14.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^7.0.2",
    "pinata": "^2.2.1",
    "sanitize-filename": "^1.6.3",
    "sharp": "^0.34.1",
    "superjson": "^2.2.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bcrypt": "^5.0.2",
