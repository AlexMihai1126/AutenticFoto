    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-sslify": "^1.2.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.14",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jest": "^30.0.2",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^8.32.0"
  }
}
